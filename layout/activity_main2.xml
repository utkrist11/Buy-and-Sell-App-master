<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="75dp"


            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="AvailableQuantity" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:gravity="center"
             />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignEnd="@+id/button7"
            android:gravity="center"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/button8"
            android:onClick="admin_add1"
            android:text="admin_add" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="admin_substract1"
            android:text="admin_remove" />

        <Button
            android:id="@+id/button9"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toEndOf="@+id/textView7"
            android:onClick="add"
            android:text="+"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toEndOf="@+id/textView8"
            android:onClick="substract"
            android:text="-"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/textView6"
            android:layout_toEndOf="@+id/imageView"
            android:textSize="25dp"
            android:gravity="center"
            android:text="50" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_toEndOf="@+id/button10"
            android:gravity="center"
            android:text="$10 each" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="75dp"

            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/imageView1"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="AvailableQuantity" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_toEndOf="@+id/button13"
            android:gravity="center"

            android:text="$20 each" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/textView9"
            android:layout_toEndOf="@+id/imageView1"
            android:gravity="center"
            android:textSize="25dp"
            android:text="50" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView1"
            android:gravity="center"
          />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_toEndOf="@+id/button14"
            android:gravity="center"
            android:textSize="24sp"
            android:text="0" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="admin_substract2"
            android:text="admin_remove" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/button11"
            android:onClick="admin_add2"
            android:text="admin_add" />

        <Button
            android:id="@+id/button13"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_toEndOf="@+id/textView11"
            android:onClick="substract1"
            android:text="-"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button14"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_toEndOf="@+id/textView10"
            android:onClick="add1"
            android:text="+"
            android:textSize="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button15"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#08f844"
            android:text="My cart" />
    </RelativeLayout>

</LinearLayout>